
<script
  src="https://cdn.jsdelivr.net/npm/handlebars@latest/dist/handlebars.min.js"
></script>


<script type="module" src="/js/admin/get-all-user.js"></script>

<script id="user-template" type="text/x-handlebars-template">
  {{log users}}
  {{#each users}}
    <tr class="border-b border-gray-300"> <td class="p-4">{{username}}</td> <td
    class="p-4">{{email}}</td> <td class="p-4">{{designation}}</td> <td
    class="p-4">${{salary}}</td> <td class="p-4 text-center">{{#if
      verified
    }}✅{{else}}❌{{/if}}</td> <td class="p-4">{{formatDate creationDate}}</td>
    <td class="p-4">{{formatDate lastLogin}}</td> <td class="p-4 text-center">
    <button class="bg-blue-500 text-white px-4 py-2 rounded">Edit</button>
    <button class="bg-red-500 text-white px-4 py-2 rounded">Delete</button>
    </td> </tr>
  {{/each}}
</script>

<div class="bg-white shadow-lg rounded-lg p-6">
  <h2 class="text-2xl font-semibold text-gray-800 mb-6">Users Management</h2>

  <div class="overflow-x-auto">
    <table class="w-full text-left border-collapse rounded-lg overflow-hidden">
      <thead class="bg-gray-800 text-white">
        <tr>
          <th class="p-4">Username</th>
          <th class="p-4">Email</th>
          <th class="p-4">Designation</th>
          <th class="p-4">Salary</th>
          <th class="p-4 text-center">Verified</th>
          <th class="p-4">Creation Date</th>
          <th class="p-4">Last Login</th>
          <th class="p-4 text-center">Actions</th>
        </tr>
      </thead>
      <tbody id="user-list">
        <!-- Users will be inserted here dynamically -->
      </tbody>
    </table>
  </div>
</div>
